<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" name="newPost" id="postTitle">
  </div>
  
  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea class="form-control" name="newPostContent" id="postContent" rows="5" cols="30"></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include('partials/footer'); -%>